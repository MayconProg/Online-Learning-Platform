generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String
  role     String
  plan     String

  @@map("users")
}

model Course {
  id        String @id @default(uuid())
  title     String
  summary   String
  owner     String
  thumbnail String

  @@map("courses")
}
